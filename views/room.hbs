<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="h3 mb-1">ðŸ’¬ {{roomName}}</h1>
        <p class="text-muted mb-0">Welcome to the chat room!</p>
      </div>
      <a href="/" class="btn btn-outline-secondary">
        <i class="bi bi-house"></i> Back to Home
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Messages</h5>
      </div>
      <div class="card-body" id="messages-container" style="height: 400px; overflow-y: auto;">
        {{#if messages.length}}
          {{#each messages}}
            <div class="mb-3">
              <div class="d-flex align-items-start">
                <div class="flex-grow-1">
                  <div class="bg-light rounded p-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                      <strong class="text-primary">{{nickName}}</strong>
                      <small class="text-muted">{{timestamp}}</small>
                    </div>
                    <p class="mb-0">{{text}}</p>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        {{else}}
          <div class="text-center text-muted py-5">
            <p>No messages yet. Be the first to send one!</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <form action="/{{roomName}}/messages" method="POST" id="message-form">
          <div class="row g-3">
            <div class="col-md-3">
              <input type="text" name="nickName" class="form-control" placeholder="Your nickname" required>
            </div>
            <div class="col-md-7">
              <textarea name="text" class="form-control" rows="2" placeholder="Type your message..." required></textarea>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary w-100 h-100">
                <i class="bi bi-send"></i> Send
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
// Auto scroll to the latest message
document.addEventListener('DOMContentLoaded', function() {
  const messagesContainer = document.getElementById('messages-container');
  messagesContainer.scrollTop = messagesContainer.scrollHeight;
});

// Auto scroll after form submission
document.getElementById('message-form').addEventListener('submit', function() {
  setTimeout(() => {
    const messagesContainer = document.getElementById('messages-container');
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
  }, 100);
});
</script>


